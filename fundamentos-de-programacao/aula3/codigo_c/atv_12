#include <stdio.h>

int main() {
    char operador;
    float num1, num2, resultado;

    while (1) {
        printf("\n--- Calculadora ---\n");
        printf("[ A ] – Adição\n");
        printf("[ S ] – Subtração\n");
        printf("[ M ] – Multiplicação\n");
        printf("[ D ] – Divisão\n");
        printf("[ F ] – Fim\n");
        printf("Escolha uma operação: ");
        scanf(" %c", &operador);

        if (operador == 'F' || operador == 'f') {
            printf("Encerrando a calculadora...\n");
            break;
        }

        printf("Digite o primeiro número: ");
        scanf("%f", &num1);
        printf("Digite o segundo número: ");
        scanf("%f", &num2);

        switch (operador) {
            case 'A':
            case 'a':
                resultado = num1 + num2;
                printf("Resultado: %.2f + %.2f = %.2f\n", num1, num2, resultado);
                break;
            case 'S':
            case 's':
                resultado = num1 - num2;
                printf("Resultado: %.2f - %.2f = %.2f\n", num1, num2, resultado);
                break;
            case 'M':
            case 'm':
                resultado = num1 * num2;
                printf("Resultado: %.2f * %.2f = %.2f\n", num1, num2, resultado);
                break;
            case 'D':
            case 'd':
                if (num2 == 0) {
                    printf("Erro: Divisão por zero não é permitida!\n");
                } else {
                    resultado = num1 / num2;
                    printf("Resultado: %.2f / %.2f = %.2f\n", num1, num2, resultado);
                }
                break;
            default:
                printf("Erro: Operador inválido!\n");
        }
    }

    return 0;
}
